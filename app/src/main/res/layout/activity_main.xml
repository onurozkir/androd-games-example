<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context="com.onurozkir.kenny.Main">

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score"
        app:layout_constraintVertical_bias="0.521"
        android:id="@+id/gridLayout">

        <ImageView
            android:id="@+id/column"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kyle" />

        <ImageView
            android:id="@+id/column2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/cartman" />

        <ImageView
            android:id="@+id/column3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/column4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/column5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/column6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="2"
            android:layout_row="1"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/column7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/column8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/column9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/kenny" />
    </GridLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="36dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timer"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/score" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="startGame"
        android:text="BaÅŸla"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="92dp"
        android:onClick="stopGame"
        android:text="Bitir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.125" />
</android.support.constraint.ConstraintLayout>
